{% extends 'admin.base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
{% endblock %}
{% block body %}
    <div class="register-container">
        <div class="py-1 text-center">
            <h2>Register</h2>
            {#<p class="lead">lorem ipsum</p>#}
        </div>
        <form class="form-register" method="post">
            <div class="form-group">
                <label for="email">Email address</label>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                <label for="password">Password</label>

                {{ form_widget(form.plainPassword) }}
                {{ form_errors(form.plainPassword) }}
            </div>
            <div class="form-group">
                <label for="full-name">Full name</label>
                {{ form_widget(form.fullName) }}
                {{ form_errors(form.fullName) }}
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                {{ form_widget(form.phoneNumber) }}
                {{ form_errors(form.phoneNumber) }}
            </div>
            <div class="form-group ">
                <label for="registerationType">Ticket</label>



                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Select</th>
                        <th scope="col">Ticket Type</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                {% for key, value in form.registrationType.vars.choices %}
                    <br>
                        <tr>
                            <td><input type="radio" id="registrationType_{{ key }}" name="registrationType" required="required"
                                       value="{{ value.value }}"/></td>
                            <td><label class="form-check-label required" for="registrationType_{{ key }}">{{ value.data.getName }}</label></td>
                            <td>{{ value.data.getPrice }} ریال</td>
                            <td>{{ value.data.getDescription }}</td>
                        </tr>
                {% endfor %}
                </tbody>
                </table>
                {{ form_errors(form.registrationType) }}

            </div>


            <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
        </form>
    </div>
{% endblock %}