{% extends 'admin.base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="container py-5">
        <h1 class="my-5">Install</h1>
        {% if install_completed %}
            Install completed.
        {% else %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Install</button>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}