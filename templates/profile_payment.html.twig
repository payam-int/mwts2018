{% extends 'profile.html.twig' %}
{% block title %}Conference{% endblock %}
{% block content %}
    <h2>Your payments</h2>
    {% for payment in payments %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <th scope="row">{{ article.id }}</th>
                    <td>{{ article.title }}</td>
                    <td><a href="{{ url('profile_view_paper', {'id': article.id}) }}">View steps</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endfor %}
{% endblock %}